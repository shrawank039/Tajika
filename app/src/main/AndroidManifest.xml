        tools:targetApi="m">
        <activity android:name=".SPbusiness.SpbProfileActivity" />
        <activity android:name=".SPbusiness.SpbEditProfileActivity" />
        <activity android:name=".SPbusiness.SpbRegisterActivity" />
        <activity android:name=".SPbusiness.SpbMyServicesActivity" />
        
