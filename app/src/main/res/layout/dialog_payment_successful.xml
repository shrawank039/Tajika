<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_100"
    android:layout_margin="20dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/topDesign_textView_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Congratulations..!!"
                android:textColor="@color/dark_blue"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_dialogCancel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/close_dialog"
                android:src="@drawable/circle_cancel"
                app:tint="@color/golden" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginVertical="30dp"
            android:src="@drawable/badge_check_2x" />

        <TextView
            style="@style/topDesign_textView_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Your payment successful"
            android:textColor="@color/dark_blue"
            android:textSize="16sp" />

        <TextView
            style="@style/topDesign_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="You will recive the details of provider via text message soon on your regstred mobile number."
            android:textColor="@color/dark_blue" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="60dp"
            android:paddingVertical="15dp"
            android:text="Close"
            android:letterSpacing="0.05"
            android:textAllCaps="false"
            android:textColor="@color/md_blue_grey_800"
            android:textStyle="bold"
            app:cornerRadius="30dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
