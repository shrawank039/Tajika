<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_document_upload_document_preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/iv_document_upload_preview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="160dp"
        android:background="@color/white"
        android:elevation="5dp"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="make_sure_your_document_is_readable"/>

        <View
            android:layout_width="180dp"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/dateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Document's Validity"/>
        <View
            android:layout_width="140dp"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:onClick="fromDate"
                android:layout_marginBottom="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="From:-" />
                <TextView
                    android:id="@+id/fromDate"
                    android:layout_margin="5dp"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:text="click to choose"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/arrow_down"/>

            </LinearLayout>

            <LinearLayout
                android:onClick="toDate"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="To:-" />
                <TextView
                    android:id="@+id/toDate"
                    android:layout_margin="5dp"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:text="click to choose"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/arrow_down"/>

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cameraLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="center">

            <Button
                android:id="@+id/btn_document_upload_retake"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:background="@drawable/white_button"
                android:onClick="onDocumentUploadRetakeClick"
                android:text="Retake"/>

            <Button
                android:id="@+id/btn_document_upload_save"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/white_button"
                android:onClick="onDocumentUploadSaveClick"
                android:text="Save"
                android:textColor="@color/white"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/galleryLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/btn_document_retake"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:background="@drawable/white_button"
                android:onClick="onDocumentRetakeClick"
                android:text="Retake"/>

            <Button
                android:id="@+id/btn_document_save"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/white_button"
                android:onClick="onDocumentSaveClick"
                android:text="Save"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>