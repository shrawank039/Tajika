<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/orange</item>
    </style>

    <!--Login and Register top layout-->
    <style name="register_top_layout">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>

    </style>

    <style name="register_input_container">
        <item name="android:background">@drawable/layout_input_outline</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">20dp</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">7dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="register_editText_container">
        <item name="android:paddingStart" tools:targetApi="o">20dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_500</item>

    </style>

    <style name="register_top_imageView">
        <item name="android:src">@drawable/nav_drawer_background</item>
        <item name="android:alpha">0.3</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="register_top_allTextViewColor">
        <item name="android:src">@drawable/nav_drawer_background</item>
        <item name="android:alpha">0.3</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="landingPage_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/md_amber_600</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/grey_800</item>
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>

    </style>

    <style name="userHome_bottomNav_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/md_grey_700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/grey_800</item>
        <item name="android:drawablePadding">10dp</item>

    </style>

</resources>
