<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/golden</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/lato</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/golden</item>
    </style>

    <!--Login and Register top layout-->
    <style name="register_top_layout">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>

    </style>

    <style name="register_input_container">
        <item name="android:background">@drawable/layout_input_outline</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">20dp</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">7dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="bookService_editText_container">
        <item name="android:background">@drawable/layout_input_outline</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">20dp</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">7dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">30dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="register_editText_container">
        <item name="android:paddingStart" tools:targetApi="o">20dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/grey_500</item>

    </style>

    <style name="register_top_imageView">
        <item name="android:src">@drawable/nav_drawer_background</item>
        <item name="android:alpha">0.2</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="register_top_allTextViewColor">
        <item name="android:src">@drawable/nav_drawer_background</item>
        <item name="android:alpha">0.3</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="landingPage_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/golden</item>
        <item name="android:textColor">@color/yellow_btn_text_color</item>
        <item name="fontFamily">@font/lato_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/grey_800</item>
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>

    </style>

    <style name="userHome_bottomNav_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/yellow_btn_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/yellow_btn_text_color</item>
        <item name="android:drawablePadding">10dp</item>

    </style>

    <style name="appBar_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/golden</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">15dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>

    </style>

    <style name="appBar_imageView">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="android:tint">@color/yellow_header_text_color</item>

    </style>

    <style name="appBar_textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="fontFamily">@font/lato_black</item>
        <item name="android:textColor">@color/yellow_header_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="allButton_llDesigns">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/layout_input_outline</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical" tools:targetApi="o">13dp</item>

    </style>

    <style name="submit_buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/layout_input_outline</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">50dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yellow_header_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/lato_black</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textSize">16sp</item>


    </style>

    <style name="allButton_txtDesigns">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/lato_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="topDesign_textView_bold">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/yellow_header_text_color</item>
    </style>

    <style name="topDesign_textView">
        <item name="fontFamily">@font/lato</item>
    </style>
</resources>
