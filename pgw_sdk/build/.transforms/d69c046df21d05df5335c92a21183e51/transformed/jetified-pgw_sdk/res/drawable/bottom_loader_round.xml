<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="17dp"></corners>
            <corners android:topLeftRadius="0dip"></corners>
            <corners android:topRightRadius="0dip"></corners>
            <corners android:bottomLeftRadius="17dp"></corners>
            <corners android:bottomRightRadius="17dp"></corners>
            <stroke android:width="1dip" android:color="@color/black_semi_transparent" />
            <gradient android:angle="-90" android:startColor="@color/black_semi_transparent" android:endColor="@color/black_semi_transparent"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="17dp"></corners>
            <corners android:topLeftRadius="0dip"></corners>
            <corners android:topRightRadius="0dip"></corners>
            <corners android:bottomLeftRadius="17dp"></corners>
            <corners android:bottomRightRadius="17dp"></corners>
            <stroke android:width="1dip" android:color="@color/black_semi_transparent" />
            <solid android:color="@color/black_semi_transparent"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="17dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="17dp"
                android:bottomRightRadius="17dp">
            </corners>
            <stroke android:width="1dip" android:color="@color/black_semi_transparent" />
            <gradient android:angle="-90" android:startColor="@color/black_semi_transparent" android:endColor="@color/black_semi_transparent" />
        </shape>
    </item>
</selector>