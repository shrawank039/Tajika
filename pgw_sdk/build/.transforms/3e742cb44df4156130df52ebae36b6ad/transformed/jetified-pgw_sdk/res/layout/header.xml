<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
    android:background="@drawable/main_header_selector" -->


    <ImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/drawable_logo" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="Helvetica Neue, Regular"
                android:text="Asgardian Inc"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/company_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="Helvetica Neue, Regular"
                android:paddingTop="4dp"
                android:text="asgad.mcu.com"
                android:digits="abcdefghijklmnopqrstuvwxyz1234567890 "
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <RelativeLayout android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content">
            <ImageButton android:id="@+id/close_btn"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:src="@drawable/ic_close_white_24dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
             </RelativeLayout>
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="Helvetica Neue, Regular"
            android:text="Order ID  #20DCB2Q1D4"
            android:textColor="@color/white"
            android:textSize="10sp" />
</LinearLayout>
    </LinearLayout>

</LinearLayout>