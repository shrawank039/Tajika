<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.textfield.TextInputLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ctil_cvv_input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="CVV"
    android:textColorHint="@color/ln_colorHint"
    app:errorEnabled="true"
    app:errorTextAppearance="@style/ErrorTextStyle"
    app:passwordToggleEnabled="true"
    app:passwordToggleTint="@null"
    app:theme="@style/MyTextInputLayout">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tiet_cvv_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:inputType="textPassword"
        android:maxLength="3"
        android:textSize="@dimen/ln_input_size"
        app:theme="@style/MyTextInputEdit" />
</com.google.android.material.textfield.TextInputLayout>